    sqlCadPessoa: TSQLDataSet;
    cdsCadPessoaIDTITULAR: TIntegerField;
    cdsCadPessoaIDEMPRESA: TIntegerField;
    cdsCadPessoaNMTITULAR: TStringField;
    cdsCadPessoaNOCNPJCPF: TStringField;
    cdsCadPessoaNOINCRICAORG: TStringField;
