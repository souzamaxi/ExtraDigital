unit uFuncoesDB;

interface

uses
  Data.DB, Data.SqlExpr;

  function PegarCodigoAutoIncrement(sTabela: string): Int64;

implementation

uses
  udmPrincipal;

function PegarCodigoAutoIncrement(sTabela: string): Int64;
var
  oDados: TSQLDataSet;
begin
  oDados := TSQLDataSet.Create(nil);
  oDados.Close;
  oDados.CommandText := 'SELECT GEN_ID(GEN_' + sTabela + '_ID,0) AS ID FROM RDB$DATABASE';
  oDados.Open;

  Result := oDados.FieldByName('ID').AsLargeInt;
end;

end.
