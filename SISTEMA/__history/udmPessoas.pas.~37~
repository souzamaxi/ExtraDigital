    sqlCadPessoaTLRESIDENCIAL: TStringField;
    sqlCadPessoaTLCOMERCIAL: TStringField;
    sqlCadPessoaTLCELULAR: TStringField;
    sqlCadPessoaTLCONTATO: TStringField;
